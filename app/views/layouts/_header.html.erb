<header class="absolute top-0 left-0 w-screen p-4">
  <nav class="flex justify-between">
    <ul class="flex gap-2 text-slate-300">
      <% if signed_in? %>
        <li>
          <%= current_user ? (nav_link_to current_user.username, current_user) : current_player.username %>
        </li>
        <li>
          <%= nav_link_to "Sign Out", signout_path %>
        </li>
      <% else %>
        <li>
          <%= nav_link_to "Sign In", signin_path %>
        </li>
        <li>
          <%= nav_link_to "Sign Up", signup_path %>
        </li>
      <% end %>
    </ul>
    <div class="text-3xl flex justify-center items-center uppercase font-bold text-primary">tic tac toe</div>
    <ul class="flex gap-2 text-slate-300">
      <li>
        <%= button_to 'New Game', new_game_path, { class: 'btn bg-green-600', method: 'get' } %>
      </li>
    </ul>
  </nav>
</header>
